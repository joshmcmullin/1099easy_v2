{
  "compilerOptions": {
      "module": "commonjs",  // Use CommonJS for compatibility with Node.js
      "target": "ES2018",    // Target modern JavaScript (adjust depending on Node.js version)
      "esModuleInterop": true,
      "noImplicitAny": true,
      "strict": true,        // Enable all strict type-checking options
      "moduleResolution": "node",  // Use Node.js module resolution mechanism
      "baseUrl": ".",  // Base directory to resolve non-relative module names
      "paths": {
          "*": ["node_modules/*", "src/types/*"]  // Adjust according to your folder structure
      },
      "outDir": "./dist",  // Output directory for compiled files
      "skipLibCheck": true  // Skip type checking of all declaration files (*.d.ts)
  },
  "include": ["src/**/*", "tests/**/*"],  // Files to include
  "exclude": ["node_modules", "dist"]  // Directories to exclude
}
